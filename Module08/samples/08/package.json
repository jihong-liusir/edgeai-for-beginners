{
  "name": "foundry-local-chat-windows11",
  "version": "1.0.0",
  "description": "A modern Windows 11 chat application powered by Microsoft Foundry Local",
  "main": "electron.js",
  "homepage": ".",
  "author": {
    "name": "Microsoft EdgeAI for Beginners",
    "email": "edgeai-support@microsoft.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/edgeai-for-beginners"
  },
  "keywords": [
    "electron",
    "chat",
    "ai",
    "foundry-local",
    "windows11",
    "fluent-design",
    "local-ai"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "dist": "electron-builder --win --publish=never",
    "pack": "electron-builder --dir",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint src/ foundry/ --ext .js",
    "lint:fix": "eslint src/ foundry/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"foundry/**/*.js\"",
    "clean": "rimraf dist/ build/",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "foundry-local-sdk": "^1.0.0",
    "openai": "^4.20.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "electron-window-state": "^5.0.3",
    "uuid": "^9.0.1",
    "marked": "^9.1.2",
    "dompurify": "^3.0.5",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "electron": "35.7.5",
    "electron-builder": "28.3.2",
    "electron-debug": "^3.2.0",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.microsoft.foundry-local-chat",
    "productName": "Foundry Local Chat",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "foundry/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "build/icon.ico",
        "to": "resources/icon.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Microsoft Corporation",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Foundry Local Chat",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "foundry/**/*.js",
      "!src/assets/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
